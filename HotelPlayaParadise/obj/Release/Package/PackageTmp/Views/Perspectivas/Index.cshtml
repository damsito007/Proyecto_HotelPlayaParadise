@model IEnumerable<HotelPlayaParadise.Models.Perspectiva>
@using HotelPlayaParadise.Helpers
@{
    ViewBag.Title = "Index";
}

<h2>Listado de Perspectivas</h2>
<link rel="stylesheet" href="~/css/StyleLink.css">
<link rel="stylesheet" href="~/css/StyleTables.css">
<link rel="stylesheet" href="~/css/StyleSummitButton.css">
<a href="@Url.Action("Create", "Perspectivas")" class="btnG" style="text-decoration: none; color:gray; margin-top:15px">
    Crear Nuevo
</a>
<table class="styled-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
 
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Objetivo.Descripcion)
                </td>*@
            <td>
                @Html.ActionButton("Editar", "Edit", "Perspectivas", new { Id = item.Perspectiva_Id }, new { @class = "btnC" }) |
                <a href="@Url.Action("Details", "Perspectivas", new { Id = item.Perspectiva_Id })" class="btngreen" style="text-decoration: none; color:green">
                    Detalles
                </a> |
                @*@Html.ActionButton("Detalles", "Details", "CMIs", new { id = item.Id }, new { @class = "btn" })*@
                @Html.ActionButton("Eliminar", "Delete", "Perspectivas", new { Id = item.Perspectiva_Id }, new { @class = "btnD" })

            </td>
        </tr>
    }

</table>
