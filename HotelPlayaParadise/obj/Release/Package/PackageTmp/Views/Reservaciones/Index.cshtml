@model IEnumerable<HotelPlayaParadise.Models.Reservaciones>
@using HotelPlayaParadise.Helpers
@{
    ViewBag.Title = "Index";
}
<div style="margin-top:2100px;">
    <h2>Listado de Reservaciones</h2>
    <link rel="stylesheet" href="~/css/StyleLink.css">
    <link rel="stylesheet" href="~/css/StyleTables.css">
    <link rel="stylesheet" href="~/css/StyleSummitButton.css">
    <a href="@Url.Action("Create", "Reservaciones")" class="btnG" style="text-decoration: none; color:gray; margin-top:15px">
        Crear Nuevo
    </a>
    <table class="styled-table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_Reservacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Metodo_Pago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clientes.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Habitaciones.Tipo_Habitacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Intermediarios.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paquetes.Nombre)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Reservacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Metodo_Pago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clientes.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Habitaciones.Tipo_Habitacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Intermediarios.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paquetes.Nombre)
                </td>
                <td>
                    @Html.ActionButton("Editar", "Edit", "Reservaciones", new { id = item.Reservacion_ID }, new { @class = "btnC" }) |
                    <a href="@Url.Action("Details", "Reservaciones", new { id = item.Reservacion_ID })" class="btngreen" style="text-decoration: none; color:green">
                        Detalles
                    </a> |
                    @*@Html.ActionButton("Detalles", "Details", "CMIs", new { id = item.Id }, new { @class = "btn" })*@
                    @Html.ActionButton("Eliminar", "Delete", "Reservaciones", new { id = item.Reservacion_ID }, new { @class = "btnD" })
                </td>
            </tr>
        }

    </table>
</div>