@model HotelPlayaParadise.Models.Tipo

@{
    ViewBag.Title = "Create";
}

<div style="max-width: 400px; margin:auto;">
    @using (Html.BeginForm())
    {
        @*@Html.AntiForgeryToken()*@

        <div class="form-horizontal">
            <h2>Registro de Tipo de Indicador</h2>
            <link rel="stylesheet" href="~/css/StyleTextBox.css">
            <link rel="stylesheet" href="~/css/StyleSummitButton.css">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Tipo_Id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Tipo_Id, new { htmlAttributes = new { @class = "input" } })
                    @Html.ValidationMessageFor(model => model.Tipo_Id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "input" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <button class="cta">
                <span>Crear</span>
                <svg width="15px" height="15px" viewBox="0 0 13 10">
                    <path d="M1,5 L11,5"></path>
                    <polyline points="8 1 12 5 8 9"></polyline>
                </svg>
            </button>
        </div>
        <a href="@Url.Action("Index", "Tipoes")" class="Btnback">
            <div class="sign">
