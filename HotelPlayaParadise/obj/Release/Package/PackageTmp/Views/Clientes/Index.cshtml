@model IEnumerable<HotelPlayaParadise.Models.Clientes>
@using HotelPlayaParadise.Helpers
@{
    ViewBag.Title = "Index";
}

<div style="margin-top:1000px;">
    <h2>Listado de Clientes</h2>

    <link rel="stylesheet" href="~/css/StyleLink.css">
    <link rel="stylesheet" href="~/css/StyleTables.css">
    <link rel="stylesheet" href="~/css/StyleSummitButton.css">

    <a href="@Url.Action("Create", "Clientes")" class="btnG" style="text-decoration: none; color:gray; margin-top:15px">
        Crear Nuevo
    </a>
    <table class="styled-table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Metodo_Reservacion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nacionalidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo_Cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Metodo_Reservacion)
                </td>
                <td>
                    @Html.ActionButton("Editar", "Edit", "Clientes", new { id = item.Cliente_ID }, new { @class = "btnC" }) |
                    <a href="@Url.Action("Details", "Clientes", new { id = item.Cliente_ID })" class="btngreen" style="text-decoration: none; color:green">
                        Detalles
                    </a> |
                    @*@Html.ActionButton("Detalles", "Details", "CMIs", new { id = item.Id }, new { @class = "btn" })*@
                    @Html.ActionButton("Eliminar", "Delete", "Clientes", new { id = item.Cliente_ID }, new { @class = "btnD" })
                </td>
            </tr>
        }

    </table>
</div>