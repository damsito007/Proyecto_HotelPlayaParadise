@model IEnumerable<HotelPlayaParadise.Models.CMI>
@using HotelPlayaParadise.Helpers
@{
    ViewBag.Title = "Index";
}

<h2>Listado del CMI</h2>

<link rel="stylesheet" href="~/css/StyleLink.css">
<link rel="stylesheet" href="~/css/StyleTables.css">
<link rel="stylesheet" href="~/css/StyleSummitButton.css">

<a href="@Url.Action("Create", "CMIs")" class="btnG" style="text-decoration: none; color:gray; margin-top:15px">
    Crear Nuevo
</a>

<table class="styled-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Periodo)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Objetivo)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Periodo)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Objetivo)
            </td>*@

        <td>
            @Html.ActionButton("Editar", "Edit", "CMIs", new { id = item.Id }, new { @class = "btnC" }) |
            <a href="@Url.Action("Details", "CMIs", new { id = item.Id })" class="btngreen" style="text-decoration: none; color:green">
                Detalles
            </a> |
            @*@Html.ActionButton("Detalles", "Details", "CMIs", new { id = item.Id }, new { @class = "btn" })*@
            @Html.ActionButton("Eliminar", "Delete", "CMIs", new { id = item.Id }, new { @class = "btnD" })

        </td>

        </tr>
    }

</table>
