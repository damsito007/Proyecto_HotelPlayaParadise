@model IEnumerable<HotelPlayaParadise.Models.Indicador>
@using HotelPlayaParadise.Helpers
@{
    ViewBag.Title = "Index";
}
<h2>Listado de Indicadores</h2>
<link rel="stylesheet" href="~/css/StyleLink.css">
<link rel="stylesheet" href="~/css/StyleTables.css">
<link rel="stylesheet" href="~/css/StyleSummitButton.css">

<a href="@Url.Action("Create", "Indicadors")" class="btnG" style="text-decoration: none; color:gray; margin-top:15px">
    Crear Nuevo
</a>
<table class="styled-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Frecuencia_Medida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unidad_Medida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Objetivo.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo.Nombre)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Indicador_Dato.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meta.Descripcion)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Frecuencia_Medida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unidad_Medida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Objetivo.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo.Nombre)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Indicador_Dato.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Meta.Descripcion)
                </td>*@
            <td>
                @Html.ActionButton("Editar", "Edit", "Indicadors", new { id = item.Id }, new { @class = "btnC" }) |
                <a href="@Url.Action("Details", "Indicadors", new { id = item.Id })" class="btngreen" style="text-decoration: none; color:green">
                    Detalles
                </a> |
                @*@Html.ActionButton("Detalles", "Details", "CMIs", new { id = item.Id }, new { @class = "btn" })*@
                @Html.ActionButton("Eliminar", "Delete", "Indicadors", new { id = item.Id }, new { @class = "btnD" })
            </td>
        </tr>
    }

</table>
