@model IEnumerable<HotelPlayaParadise.Models.Habitaciones>
@using HotelPlayaParadise.Helpers
@{
    ViewBag.Title = "Index";
}
<div style="margin-top:1000px;">
    <h2>Listado de Habitaciones</h2>
    <link rel="stylesheet" href="~/css/StyleLink.css">
    <link rel="stylesheet" href="~/css/StyleTables.css">
    <link rel="stylesheet" href="~/css/StyleSummitButton.css">
    <a href="@Url.Action("Create", "Habitaciones")" class="btnG" style="text-decoration: none; color:gray; margin-top:15px">
        Crear Nuevo
    </a>
    <table class="styled-table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_Habitacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio_Noche)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponibilidad)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo_Habitacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio_Noche)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Disponibilidad)
                </td>
                <td>
                    @Html.ActionButton("Editar", "Edit", "Habitaciones", new { id = item.Habitacion_ID }, new { @class = "btnC" }) |
                    <a href="@Url.Action("Details", "Habitaciones", new { id = item.Habitacion_ID })" class="btngreen" style="text-decoration: none; color:green">
                        Detalles
                    </a> |
                    @*@Html.ActionButton("Detalles", "Details", "CMIs", new { id = item.Id }, new { @class = "btn" })*@
                    @Html.ActionButton("Eliminar", "Delete", "Habitaciones", new { id = item.Habitacion_ID }, new { @class = "btnD" })
                </td>
            </tr>
        }

    </table>
    </div>